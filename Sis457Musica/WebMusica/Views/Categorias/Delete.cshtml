@model WebMusica.Models.Categorium

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>ELIMINAR CATEGORÍA</h4>

        
                <div>
                   
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Nombre</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
                        <a asp-action="Index">VOLVER</a>
                    </form>
                </div>

            </div>
        </div>
    </section>
</div>