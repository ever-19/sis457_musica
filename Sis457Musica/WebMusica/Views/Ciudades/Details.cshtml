@model WebMusica.Models.Ciudad

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>DETALLES CIUDAD</h4>

                <div>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Nombre </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">Deprtamento</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdDepartamentoNavigation.Nombre)
                        </dd>
                        <dt class="col-sm-2">País</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdPaisNavigation.Nombre)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">EDITAR</a> |
                    <a asp-action="Index">VOLVER</a>
                </div>
            </div>
        </div>
    </section>
</div>
