
@{
    ViewData["Title"] = "Contactos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <section class="">
        <div class="container">
            <div class="row">

                <!-- Page Content -->




                <div class="find-us">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-heading">
                                    <h2>UBICACIÓN DE LA TIENDA</h2>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <!-- How to change your own map point
                                    1. Go to Google Maps
                                    2. Click on your location point
                                    3. Click "Share" and choose "Embed map" tab
                                    4. Copy only URL and paste it within the src="" field below
                                -->

                                <div id="map">
                                    <iframe src="https://maps.google.com/maps?q=Monumento+Cooperativista,+sucre+-+RJ,+Brazil&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="330px" frameborder="0" style="border:0" allowfullscreen></iframe>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="left-content">
                                    <h4>SUCRE</h4>
                                    <p>Estamos ubicados en Sucre a unos pasos de la plazuela Cooperativista.<br><br></p>
                                    <h4>CONTÁCTANOS</h4>
                                    <ul class="social-icons">
                                        <li><a href="https://wa.me/68615340"><i class="fa fa-whatsapp"> </i></a> (+591)68615340</li>
                                        <br>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a> Tienda de Música</li>
                                       
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="send-message">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-heading">
                                    <h2>Escribenos</h2>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="contact-form">
                                    <form id="contact" action="" method="post">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="name" type="text" class="form-control" id="name" placeholder="Nombre" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="email" type="text" class="form-control" id="email" placeholder="Correo Electrónico" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="subject" type="text" class="form-control" id="subject" placeholder="Asunto" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <textarea name="message" rows="6" class="form-control" id="message" placeholder="Decripción" required=""></textarea>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" id="form-submit" class="filled-button">Enviar Mensaje</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </section>
</div>
