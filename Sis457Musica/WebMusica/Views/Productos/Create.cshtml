@model WebMusica.Models.Producto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>CREAR PRODUCTO</h4>

                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label  class="control-label">Código</label>
                                <input asp-for="Codigo" class="form-control" placeholder="Código" required />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Nombre</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Descripción</label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Descripción" required />
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Precio</label>
                                <input asp-for="Precio" type="number" class="form-control" placeholder="Precio" required/>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Cantidad Existente</label>
                                <input asp-for="CantidadExistente" type="number" class="form-control" placeholder="Cantidad Existente" required />
                                <span asp-validation-for="CantidadExistente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Url Imagen</label>
                                <input asp-for="UrlImagen" class="form-control" placeholder="Url Imagen" required />
                                <span asp-validation-for="UrlImagen" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Categoría</label>
                                <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Marca</label>
                                <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.IdMarca"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Unidad de Medidad</label>
                                <select asp-for="IdUnidadMedida" class="form-control" asp-items="ViewBag.IdUnidadMedida"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="CREAR" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">VOLVER</a>
                </div>

            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
