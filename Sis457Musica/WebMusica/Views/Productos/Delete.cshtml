@model WebMusica.Models.Producto

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>ELIMINAR PRODUCTO</h4>
                <div>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Código</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                        <dt class="col-sm-2">Nombre</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">Descripción</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-2">Precio</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                        <dt class="col-sm-2">Cantidad Existente</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CantidadExistente)
                        </dd>
                        <dt class="col-sm-2">Url Imagen</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UrlImagen)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                        <dt class="col-sm-2">Categoría</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdCategoriaNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Marca</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdMarcaNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Unidad Medida</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdUnidadMedidaNavigation.Id)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
                        <a asp-action="Index">VOLVER</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>