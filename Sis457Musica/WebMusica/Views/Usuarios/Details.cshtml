@model WebMusica.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>DETALLES Usuario</h4>

                <div>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Nombre</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">Apellidos</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>
                        <dt class="col-sm-2">Correo</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Correo)
                        </dd>
                        <dt class="col-sm-2">Usuario</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Usuario1)
                        </dd>
                        <dt class="col-sm-2">Clave</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Clave)
                        </dd>
                        <dt class="col-sm-2">Es Admin</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EsAdmin)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                    <a asp-action="Index">VOLVER</a>
                </div>

            </div>
        </div>
    </section>
</div>
