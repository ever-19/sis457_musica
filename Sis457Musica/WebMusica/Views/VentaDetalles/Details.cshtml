@model WebMusica.Models.VentaDetalle

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>DETALLES DE LA VENTA DETALLE</h4>

                <div>

                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Cantidad</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cantidad)
                        </dd>
                        <dt class="col-sm-2">Total</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Total)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                        <dt class="col-sm-2">Producto</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdProductoNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Id Venta</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdVentaNavigation.Id)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">EDITAR</a> |
                    <a asp-action="Index">VOLVER</a>
                </div>
            </div>
        </div>
    </section>
</div>