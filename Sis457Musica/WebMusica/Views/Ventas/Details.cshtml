@model WebMusica.Models.Ventum

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner header-text">
    <section class="">
        <div class="container">
            <div class="row">
                <h4>DETALLES DE LA VENTA</h4>

                <div>
                    <h4>Ventum</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Usuario</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Dirección</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                        <dt class="col-sm-2">Celular</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Celular)
                        </dd>
                        <dt class="col-sm-2">Ciudad</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdCiudadNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Departamento</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdDepartamentoNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">País</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdPaisNavigation.Id)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">EDITAR</a> |
                    <a asp-action="Index">VOLVER</a>
                </div>
            </div>
        </div>
    </section>
</div>